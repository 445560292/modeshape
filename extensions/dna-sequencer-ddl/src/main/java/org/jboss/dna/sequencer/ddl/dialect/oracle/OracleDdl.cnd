[oracleddl:alterIndextype]     > ddl:alterable, ddl:statement, oracleddl:indextypeOperand mixin
[oracleddl:alterJava]          > ddl:alterable, ddl:statement, oracleddl:javaOperand mixin
[oracleddl:alterMaterialized]  > ddl:alterable, ddl:statement, oracleddl:materializedOperand mixin
