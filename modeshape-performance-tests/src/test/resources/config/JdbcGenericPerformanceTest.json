{
    "name" : "DB Repository",
    "storage" : {
        "persistence" : {
            "type" : "db",
            "connectionUrl": "${dataSource.url}",
            "driver": "${dataSource.driverClassName}",
            "username": "${dataSource.username}",
            "password": "${dataSource.password}",
            "createOnStart": true,
            "dropOnExit": false
        },
        "binaryStorage" : {
            "type"  : "database",
            "driverClass" : "${dataSource.driverClassName}",
            "url" : "${dataSource.url}",
            "username" : "${dataSource.username}",
            "password" : "${dataSource.password}"
        }
    },
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    }
}