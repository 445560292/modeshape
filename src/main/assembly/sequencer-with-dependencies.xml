<assembly>
  <id>with-dependencies</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
			<excludes>
				<!-- No need to include the JCIP annotations -->
				<exclude>net.jcip:jcip-annotations</exclude>
				<!-- Don't include the ModeShape core libraries and their dependencies -->
				<exclude>org.modeshape:modeshape-common</exclude>
				<exclude>org.modeshape:modeshape-graph</exclude>
				<exclude>org.modeshape:modeshape-cnd</exclude>
				<exclude>com.google.collections:*</exclude>
				<exclude>joda-time:*</exclude>
				<exclude>org.slf4j:*</exclude>
			</excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <includes>
				<include>${project.artifactId}-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../src/main/resources</directory>
			<useStrictFiltering>true</useStrictFiltering>
			<outputDirectory>META-INF</outputDirectory>
      <includes>
				<include>AUTHORS.txt</include>
				<include>COPYRIGHT.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
